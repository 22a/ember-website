{{#if (and config.route (not this.hide))}}
  <div class="survey-reminder-wrapper">
    {{#if (eq router.currentRouteName config.route)}}
      You have {{this.daysLeftText}} left to submit your response!
    {{else}}
      Take the {{#link-to config.route class="ml-1"}}{{this.config.title}}{{/link-to}}
    {{/if}}
    <button type="button" aria-label="dismiss this message" class="toggle-close hide-on-mobile" {{action "hide"}}>
      <span aria-hidden="true">x</span>
    </button>
  </div>
{{/if}}