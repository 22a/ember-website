<nav class="filter flex-horizontal-between">
  <span class="filter-group">
    <LinkTo @route="mascots" @query={{hash filter="all"}}>All</LinkTo>
    <LinkTo @route="mascots" @query={{hash filter="tomster"}}>Tomsters</LinkTo>
    <LinkTo @route="mascots" @query={{hash filter="zoey"}}>Zoeys</LinkTo>
    <LinkTo @route="mascots" @query={{hash filter="meetup"}}>Meetups</LinkTo>
    <LinkTo @route="mascots" @query={{hash filter="conference"}}>Conferences</LinkTo>
    <LinkTo @route="mascots" @query={{hash filter="corp"}}>Corporate</LinkTo>
    <LinkTo @route="mascots" @query={{hash filter="other"}}>Others</LinkTo>
  </span>
  <span>
    <LinkTo @route="mascots" @query={{hash display="small"}}>Small</LinkTo>
    <LinkTo @route="mascots" @query={{hash display="large"}}>Large</LinkTo>
  </span>
</nav>

<ul class="unstyled grid {{this.displayClass}}">
  {{#each this.sortedModel as |tomster|}}
    <li>
      <figure>
        <div class="well well-1/1">
          <img src="/images/tomsters/{{tomster.image}}" alt="" role="presentation" loading="lazy">
        </div>
        <figcaption class="flex-horizontal-between">
          {{#if tomster.url}}
            <a href={{tomster.url}}>
              {{tomster.title}}
            </a>
          {{else}}
            <span>{{tomster.title}}</span>
          {{/if}}

          <time datetime={{tomster.date}}>{{format-date-time tomster.date "MMMM d, y"}}</time>
        </figcaption>
      </figure>
    </li>
  {{/each}}
</ul>